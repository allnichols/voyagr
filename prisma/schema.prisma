generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id       Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  trips     Trip[]
  createdAt DateTime @default(now())
}

model Trip {
  id            Int      @id @default(autoincrement())
  destination   String
  departureDate DateTime
  returnDate    DateTime
  preferences   String   // CSV or JSON string
  aiData        Json     // Store the AI data object
  createdAt     DateTime @default(now())
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
}